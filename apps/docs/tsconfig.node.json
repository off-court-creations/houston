{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2020"],
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": false,
    "noEmit": true,
    "types": ["node"]
  },
  "include": ["vite.config.ts", "scripts/**/*.ts", "server/**/*.ts"],
  "exclude": ["node_modules"]
}
