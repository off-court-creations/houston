{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://git-native-ticketing.example/schema/ticket.epic.schema.json",
  "title": "Ticket (Epic)",
  "allOf": [
    {
      "$ref": "./ticket.base.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "const": "epic"
        }
      },
      "not": {
        "anyOf": [
          {
            "required": [
              "priority"
            ]
          },
          {
            "required": [
              "story_points"
            ]
          },
          {
            "required": [
              "time_tracking"
            ]
          }
        ]
      }
    }
  ]
}
