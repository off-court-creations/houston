{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://git-native-ticketing.example/schema/ticket.story.schema.json",
  "title": "Ticket (Story)",
  "allOf": [
    {
      "$ref": "./ticket.base.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "const": "story"
        },
        "parent_id": {
          "anyOf": [
            {
              "type": "null"
            },
            {
              "type": "string",
              "pattern": "^EPIC-[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
            }
          ]
        }
      },
      "not": {
        "required": [
          "time_tracking"
        ]
      }
    }
  ]
}
