{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://git-native-ticketing.example/schema/component-routing.schema.json",
  "title": "Component Routing",
  "type": "object",
  "required": [
    "routes"
  ],
  "properties": {
    "routes": {
      "type": "object",
      "propertyNames": {
        "pattern": "^[a-z0-9][a-z0-9_-]*$"
      },
      "additionalProperties": {
        "type": "array",
        "minItems": 1,
        "uniqueItems": true,
        "items": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9._-]*(?:@[A-Za-z0-9./_-]+)?$"
        }
      }
    },
    "defaults": {
      "type": "object",
      "properties": {
        "epic": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9._-]*(?:@[A-Za-z0-9./_-]+)?$"
          }
        },
        "story": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9._-]*(?:@[A-Za-z0-9./_-]+)?$"
          }
        },
        "subtask": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9._-]*(?:@[A-Za-z0-9./_-]+)?$"
          }
        },
        "bug": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9._-]*(?:@[A-Za-z0-9./_-]+)?$"
          }
        }
      },
      "additionalProperties": false
    },
    "generated_by": {
      "type": "string",
      "pattern": "^houston@[^\\s]+$"
    }
  },
  "additionalProperties": false
}
